{
  "manifest_version": 3,
  "name": "Markdown Viewer",
  "version": "1.0.0",
  "description": "A Chrome extension to view Markdown files with syntax highlighting",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "offscreen",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "file:///*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*.md", 
        "file://*/*.markdown",
        "*://*/*.md",
        "*://*/*.markdown"
      ],
      "js": ["content-detector.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "offscreen.html",
        "*.woff2",
        "*.woff",
        "*.ttf"
      ],
      "matches": ["file://*", "https://*/*", "http://*/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}