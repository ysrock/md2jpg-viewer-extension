{
  "id": "cambria",
  "name": "现代文档",
  "name_en": "Modern Document",
  "description": "Cambria 字体，现代化的屏幕阅读体验",
  "description_en": "Cambria font with modern screen reading experience",
  "author": "Markdown Viewer Extension",
  "version": "1.0.0",
  
  "fontScheme": {
    "body": {
      "fontFamily": "Palatino",
      "fontSize": "12pt",
      "lineHeight": 1.5
    },
    "headings": {
      "h1": {
        "fontSize": "24pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "20pt",
          "after": "12pt"
        }
      },
      "h2": {
        "fontSize": "20pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "18pt",
          "after": "10pt"
        }
      },
      "h3": {
        "fontSize": "16pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "16pt",
          "after": "8pt"
        }
      },
      "h4": {
        "fontSize": "14pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "14pt",
          "after": "7pt"
        }
      },
      "h5": {
        "fontSize": "12pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "12pt",
          "after": "6pt"
        }
      },
      "h6": {
        "fontSize": "11pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "10pt",
          "after": "5pt"
        }
      }
    },
    "code": {
      "fontFamily": "Monaco",
      "fontSize": "10pt",
      "background": "#f6f8fa"
    }
  },
  
  "tableStyle": "grid",
  
  "codeTheme": "cool-modern",
  
  "spacing": "standard"
}
