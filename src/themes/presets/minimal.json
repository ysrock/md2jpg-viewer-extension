{
  "id": "technical",
  "name": "技术文档",
  "name_en": "Technical",
  "description": "专为技术文档设计，清晰简洁的极简风格",
  "description_en": "Designed for technical documentation with clean minimalist style",
  "author": "Markdown Viewer Extension",
  "version": "1.0.0",
  
  "fontScheme": {
    "body": {
      "fontFamily": "Arial",
      "fontSize": "11pt",
      "lineHeight": 1.5
    },
    "headings": {
      "h1": {
        "fontSize": "24pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "16pt",
          "after": "10pt"
        }
      },
      "h2": {
        "fontSize": "20pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "16pt",
          "after": "10pt"
        }
      },
      "h3": {
        "fontSize": "16pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "14pt",
          "after": "8pt"
        }
      },
      "h4": {
        "fontSize": "13pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "12pt",
          "after": "6pt"
        }
      },
      "h5": {
        "fontSize": "11pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "10pt",
          "after": "5pt"
        }
      },
      "h6": {
        "fontSize": "11pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "8pt",
          "after": "4pt"
        }
      }
    },
    "code": {
      "fontFamily": "Monaco",
      "fontSize": "10pt",
      "background": "#f8f8f8"
    }
  },
  
  "tableStyle": "grid",
  
  "codeTheme": "light-clean",
  
  "spacing": "compact"
}
