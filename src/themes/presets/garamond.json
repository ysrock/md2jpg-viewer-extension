{
  "id": "garamond",
  "name": "长文阅读",
  "name_en": "Long Reading",
  "description": "Garamond 字体，舒适的长文阅读体验",
  "description_en": "Garamond font for comfortable long-form reading",
  "author": "Markdown Viewer Extension",
  "version": "1.0.0",
  
  "fontScheme": {
    "body": {
      "fontFamily": "Georgia",
      "fontSize": "13pt",
      "lineHeight": 1.75
    },
    "headings": {
      "h1": {
        "fontSize": "28pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "24pt",
          "after": "14pt"
        }
      },
      "h2": {
        "fontSize": "24pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "22pt",
          "after": "12pt"
        }
      },
      "h3": {
        "fontSize": "20pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "18pt",
          "after": "10pt"
        }
      },
      "h4": {
        "fontSize": "16pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "16pt",
          "after": "9pt"
        }
      },
      "h5": {
        "fontSize": "14pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "14pt",
          "after": "8pt"
        }
      },
      "h6": {
        "fontSize": "12pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "12pt",
          "after": "7pt"
        }
      }
    },
    "code": {
      "fontFamily": "Monaco",
      "fontSize": "10pt",
      "background": "#f9f9f9"
    }
  },
  
  "tableStyle": "borderless",
  
  "codeTheme": "warm-book",
  
  "spacing": "relaxed"
}
