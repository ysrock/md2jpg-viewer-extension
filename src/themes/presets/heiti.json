{
  "id": "heiti",
  "name": "现代黑体",
  "name_en": "Hei Style",
  "description": "黑体字体，现代简约风格",
  "description_en": "Hei font with modern minimal style",
  "author": "Markdown Viewer Extension",
  "version": "1.0.0",
  
  "fontScheme": {
    "body": {
      "fontFamily": "SimHei",
      "fontSize": "11pt",
      "lineHeight": 1.6
    },
    "headings": {
      "h1": {
        "fontSize": "26pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "20pt",
          "after": "12pt"
        }
      },
      "h2": {
        "fontSize": "22pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "18pt",
          "after": "10pt"
        }
      },
      "h3": {
        "fontSize": "18pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "16pt",
          "after": "9pt"
        }
      },
      "h4": {
        "fontSize": "15pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "14pt",
          "after": "8pt"
        }
      },
      "h5": {
        "fontSize": "13pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "12pt",
          "after": "7pt"
        }
      },
      "h6": {
        "fontSize": "12pt",
        "fontWeight": "bold",
        "spacing": {
          "before": "10pt",
          "after": "6pt"
        }
      }
    },
    "code": {
      "fontFamily": "Monaco",
      "fontSize": "10pt",
      "background": "#f0f0f0"
    }
